@model IEnumerable<UserViewModel>;
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<hr />

@if (Model.Count() > 0)
{
    <table class="table table-responsive  mt-2 table-striped table-hover">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.Id)</th>
                <th>@Html.DisplayNameFor(u => u.DisplayName)</th>
                <th>@Html.DisplayNameFor(u => u.UserName)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                 <th>Roles</th>   
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.DisplayName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>

                     <td>@string.Join(",",user.Roles.ToList())</td>   

                    <td>

                        <a asp-action="Edit" class="btn btn-outline-warning" asp-route-Id="@user.Id">Edit</a>

                    </td>
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There Is No Records</h2>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


