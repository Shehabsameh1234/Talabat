@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<h2 class="mt-2">All Roles</h2>
<hr />
<partial name="PartialViews/RoleFormPartialView" model="new RoleFormViewModel()" />

@if(Model.Count()>0)
{
   <table class="mt-2 table table-hover table-responsive-xl table-striped">

       <thead>
           <tr>
               <th>@Html.DisplayNameFor(r=>r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Edit</th>
                <th>Delete</th>

           </tr>
       </thead>
       <tbody>
           @foreach(var role in Model)
            {
                <tr>
                   <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        
                        <a asp-action="Edit" class="btn btn-outline-warning" asp-route-Id="@role.Id">Edit</a>

                    </td>
                    <td>
                        
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id="@role.Id">Delete</a>

                    </td>
                </tr>
            }
        </tbody>

   </table>
    
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There Is No Records</h2>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

